<h1> Watch Models </h1>
<%= link_to 'Add New Watch', new_watch_path, class: 'btn btn-primary' %>
<ul class="watch-list">
  <% @watches.each do |watch| %>
    <li class="watch-item">
      <%= image_tag watch.photo, style: "max-width: 200px; height: auto;" %>
      <u>Model</u>: <%= watch.model %><br>
      <u>Brand</u>: <%= watch.brand.name %><br>
      <u>Price</u>: <%= number_to_currency(watch.price) %>
    </li>
  <% end %>
</ul>
