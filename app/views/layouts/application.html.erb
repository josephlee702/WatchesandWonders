<!DOCTYPE html>
<html>
<head>
  <title>My Watch Catalog</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
</head>

<body>
  <header class = "header">
    <nav class="navbar">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Home', root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Watches', watches_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Brands', brands_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Add New Watch', new_watch_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Add New Brand', new_brand_path, class: "nav-link" %>
          </li>
          <%# if statement to change view depending on logged in session or not %>
          <% if current_user %>
            <li class="nav-item">
              <%= link_to "Log out", logout_path, method: :delete, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "My Profile", user_path(current_user.id) %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Register as a User", new_user_path %>
            </li>
            <li class="nav-item">
              <%= link_to "Log In", login_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>

  <div class="container">
      <% flash.each do |key, message| %>
        <div class="alert alert-<%= key %>"><%= message %></div>
      <% end %>
      
      <%= yield %>
  </div>

  <footer class="footer">
    <div class="footer-content">
      <ul class="footer-nav">
        <li class="footer-item">
          <%= link_to 'About', about_path %>
        </li>
      </ul>
      <div class="text-muted">Â© 2024 WatchesAndWonders</div>
    </div>
  </footer>
</body>
</html>
